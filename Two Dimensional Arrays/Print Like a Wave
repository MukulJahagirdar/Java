public class Solution {

	public static void wavePrint(int arr[][]){
		int rows=arr.length;
		
		if(rows==0){
            
        }
        else{
		int col=arr[0].length;
        for ( int j=0; j< col ; j++){
			if(j%2==0){
			for (int i=0 ; i<rows ; i++){
				System.out.print(arr[i][j]+ " ");
				}
			}
			else{
				for (int i=rows-1 ; i>=0 ; i--){
				System.out.print(arr[i][j]+ " ");
				}
			}
		}
	}
    }

}
